{
    "name": "nowmovesoft/yii-filepond-assets",
    "description": "Yii2 assets bundles for FilePond",
    "keywords": [
        "yii2",
        "filepond",
        "asset",
        "bundle",
        "connection"
    ],
    "type": "library",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Michael Naumov",
            "email": "vommuan@gmail.com",
            "homepage": "http://mnaumov.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/nowmovesoft/yii-filepond-assets/issues?state=open",
        "wiki": "https://github.com/nowmovesoft/yii-filepond-assets/wiki",
        "source": "https://github.com/nowmovesoft/yii-filepond-assets"
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.2",
        "yiisoft/yii2": "~2.0.14",
        "npm-asset/filepond": "^4.13.1",
        "npm-asset/jquery-filepond": "^1.0.0",
        "npm-asset/filepond-plugin-file-rename": "^1.1.4",
        "npm-asset/filepond-plugin-file-encode": "^2.1.5",
        "npm-asset/filepond-plugin-file-validate-size": "^2.2.1",
        "npm-asset/filepond-plugin-file-validate-type": "^1.2.5",
        "npm-asset/filepond-plugin-file-metadata": "^1.0.6",
        "npm-asset/filepond-plugin-file-poster": "^2.2.0",
        "npm-asset/filepond-plugin-image-preview": "^4.6.1",
        "npm-asset/filepond-plugin-image-edit": "^1.6.0",
        "npm-asset/filepond-plugin-image-crop": "^2.0.3",
        "npm-asset/filepond-plugin-image-resize": "^2.0.4",
        "npm-asset/filepond-plugin-image-transform": "^3.7.2",
        "npm-asset/filepond-plugin-image-exif-orientation": "^1.0.6",
        "npm-asset/filepond-plugin-image-validate-size": "^1.2.3",
        "npm-asset/filepond-plugin-image-filter": "^1.0.0"
    },
    "require-dev": {
        "codeception/codeception": "^4.0",
        "codeception/specify": "^1.3",
        "codeception/verify": "^1.3",
        "codeception/module-asserts": "^1.0.0",
        "codeception/module-yii2": "^1.1.0"
    },
    "autoload": {
        "psr-4": {
            "nms\\filepond\\": "src/"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ]
}
